<header class="bg-blue-300 h-[10vh] grid items-center text-white">
  <nav class="flex justify-between items-center px-10">
    <div class="">
      <h4>AstroNav</h4>
    </div>
    <div
      id="nav-menu"
      class="absolute md:static md:min-h-fit bg-blue-300 min-h-fit left-[-100%] top-[10%] w-full md:w-auto transition-all duration-300 py-10 md:py-0"
    >
      <ul class="flex items-center gap-4 md:flex-row flex-col">
        <li>
          <a href="#">Home</a>
        </li>
        <li>
          <a href="/about">About</a>
        </li>
        <li>
          <a href="#">Blog</a>
        </li>
        <li>
          <a href="#">Contact</a>
        </li>
      </ul>
    </div>
    <div class="flex items-center gap-4">
      <button class="bg-white px-6 py-2 rounded-xl text-blue-300"
        >Sign in</button
      >
      <button
        id="nav-toggle"
        class="md:hidden px-6 py-2 bg-white text-blue-300 rounded-xl font-bold relative z-20"
        >X</button
      >
    </div>
  </nav>
</header>

<script>
  const navMenu = document.getElementById("nav-menu")
  const navToggle = document.getElementById("nav-toggle")

  navToggle.addEventListener("click", () => {
    const currentLeft = navMenu.style.left
    navMenu.style.left = currentLeft === "0%" ? "-100%" : "0%"
  })
</script>
